    <h1>Add Player's records</h1>

    <div class="page-wrapper bg-dark p-t-100 p-b-100 font-robo">
        <div class="wrapper wrapper--w680">
            <div class="card card-1">
                <div class="card-heading"></div>
                <div class="card-body">

                    <!-- Here comes the form of registration  -->


                    <h2 class="title">Player Registration Info</h2>
                    <form action="/auth/add_player" method="POST">

                        <div class="input-group">
                            <input required="true" class="input--style-1" type="text" placeholder="ACADEMY ID"
                                name="AcademyId">
                        </div>

                        <div class="input-group">
                            <input required="true" class="input--style-1" type="text" placeholder="NAME" name="Name">
                        </div>


                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <input required="true" class="input--style-1 js-datepicker" type="text"
                                        placeholder="BIRTHDATE(yyyy-mm-dd)" name="BirthDate">
                                    <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
                                </div>
                            </div>

                        </div>

                        <div class="input-group">
                            <input required="true" class="input--style-1" type="text" placeholder="PLAYER-ID"
                                name="PlayerId">
                        </div>


                        <!-- For email and phone number  -->
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <input required="true" class="input--style-1" type="email" placeholder="E-MAIL"
                                        name="Email">
                                </div>
                            </div>

                            <div class="col-2">
                                <div class="input-group">
                                    <input required="true" class="input--style-1" type="text"
                                        placeholder="PLAYERS CONTACT" name="PlayersContact">
                                </div>
                            </div>
                            
                        </div>

                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <input required="true" class="input--style-1" type="text"
                                        placeholder="PLAYERS GARDIANS CONTACT" name="PlayersGardiansContact">
                                </div>
                            </div>
                        </div>


                        <div class="input-group">
                            <div class="rs-select2 js-select-simple select--no-search">
                                <select required="true" name="PlayingRole">
                                    <option disabled="disabled" selected="selected">PLAYING ROLE</option>
                                    <option>Batsman</option>
                                    <option>Bowler</option>
                                    <option>All-Rounder</option>
                                    <option>Wicket Keeper</option>
                                    <option>Wicket Keeper Batsman</option>
                                </select>
                                <div class="select-dropdown"></div>
                            </div>
                        </div>


                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <div class="rs-select2 js-select-simple select--no-search">
                                        <select required="true" name="BattingStyle">
                                            <option disabled="disabled" selected="selected">BATTING STYLE</option>
                                            <option>Right Handed</option>
                                            <option>Left Handed</option>
                                        </select>
                                        <div class="select-dropdown"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-2">
                                <div class="input-group">
                                    <div class="rs-select2 js-select-simple select--no-search">
                                        <select required="true" name="BowlingStyle">
                                            <option disabled="disabled" selected="selected">BOWLING STYLE</option>
                                            <option>Right Handed Seam</option>
                                            <option>Right Handed Spin (Arthodox)</option>
                                            <option>Right Handed Spin (Leg Spinner)</option>
                                            <option>Left Handed Seam</option>
                                            <option>Left Handed Spin (Arthodox)</option>
                                            <option>Left Handed Spin (Leg Spinner)</option>
                                        </select>
                                        <div class="select-dropdown"></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Image Upload -->

                        <label class="form-label my-10" for="customFile">Choose a picture</label>
                        <input type="file" class="form-control" id="customFile" accept="image/*" / name="Image">


                        <div class="p-t-20">
                            <button class="btn btn--radius btn--green" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
